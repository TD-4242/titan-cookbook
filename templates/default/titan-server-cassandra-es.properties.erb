storage.backend=<%= node[:titan][:storage_backend] %>
storage.cassandra-config-dir=file://<%= node[:titan][:storage_cassandra_config] %>

<% if node[:titan][:storage_index_backend] %>
storage.index.<%= node[:titan][:storage_index_name] %>.backend=elasticsearch
storage.index.<%= node[:titan][:storage_index_name] %>.directory=<%= node[:titan][:storage_index_directory] %>
storage.index.<%= node[:titan][:storage_index_name] %>.client-only=<%= node[:titan][:storage_index_client_only] %>
storage.index.<%= node[:titan][:storage_index_name] %>.local-mode=<%= node[:titan][:storage_index_local_mode] %>
storage.index.<%= node[:titan][:storage_index_name] %>.hostname=<%= node[:titan][:storage_index_hostnames] %>
<% end %>
